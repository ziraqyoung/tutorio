%div.bg-teal-700
  .max-w-screen-lg.mx-auto.py-10
    %h1.text-6xl.font-bold.font-serif.tracking-tight.capitalize= @course.title
    %p.mt-4.text-xl.text-gray-400= @course.description
    .mt-6.flex.items-center
      = link_to nil, url: '#', class: 'group flex items-center justify-between px-8 py-2 bg-transparent border border-white hover:bg-white text-white hover:text-teal-600 rounded-md text-base' do
        %span Watch Trailer
        %span.ml-3.text-white.text-xs.group-hover:text-teal-600
          %svg.fill-current.h-4.w-4{xmlns: "http://www.w3.org/2000/svg", viewBox:"0 0 20 20" }
            %path{ d:"M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM7 6l8 4-8 4V6z" }

      = link_to "Start your Free Trial", '#', class: 'capitalize ml-4 inline-block px-8 py-2 bg-white text-base text-gray-800 border rounded-md hover:bg-gray-200'


