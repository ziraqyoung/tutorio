%header.bg-gray-900
  .flex.max-w-7xl.mx-auto.h-16.justify-between.px-4.py-2
    .flex.items-center(class="w-1/2")
      = link_to "Home", root_path, class: 'text-xl hover:bg-gray-800'
      %button.ml-4.text-xl.rounded.bg-gray-800.text-gray-200.px-3.py-2.hover:bg-gray-700.hover:border-gray-4 Courses
      = form_with(url: '#', method: :get, class: 'ml-4 w-full') do
        = label_tag :q, "Search for:", class: 'hidden'
        = text_field_tag :q, nil, class: 'px-3 py-2 w-2/3 rounded bg-gray-800 text-xl text-gray-200 focus:bg-gray-700 focus:text-gray-100 ', placeholder: 'Search a course'
        = submit_tag "Search"

    .flex.items-center(class="w-1/2 flex justify-end")
      = link_to "Login", new_user_session_path, class: 'text-xl'
      %button.px-3.py-2.rounded.text-lg.bg-red-800.hover:bg-red-700.ml-4 Get Started
